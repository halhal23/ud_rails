<%= form_for comment  do |f| %> 
  <%= f.hidden_field :board_id %>
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.select :name, [
      ['hal', 'hal'],
      ['rails', 'rails'],
      ['udemy', 'udemy'],
      ['progete', 'progate']
    ], { selected: comment.name }, { class: "form-control" }  %>
  </div>

  <div class="form-group">
    <%= f.label :comment, "コメント" %>
    <%= f.text_area :comment, class: "form-control", rows: 5 %>
  </div>

  <%= f.submit '保存', class: "btn btn-primary" %>
<% end %>
