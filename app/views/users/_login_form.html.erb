<div class="box">
  <h2 class="mb-4">ログイン</h2> 
  <%= form_for(:session, method: :post, url: login_path) do |f| %>
    <div class="form-group">
      <!-- <%= f.label :name, "名前" %> -->
      <%= f.text_field :name, class: "form-control", placeholder: "名前" %>
    </div>
    <div class="form-group">
      <!-- <%= f.label :password, "パスワード" %> -->
      <%= f.password_field :password, class: "form-control", placeholder: "パスワード" %>
    </div>
    <%= f.submit "送信", class: "btn btn-outline-dark" %>
  <% end %>
</div>