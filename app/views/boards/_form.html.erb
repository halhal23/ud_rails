<%= render 'shared/error_messages' %>

<%= form_for board  do |f| %> 
  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.select :name, [
      ['hal', 'hal'],
      ['rails', 'rails'],
      ['udemy', 'udemy'],
      ['progete', 'progate']
    ], { selected: board.name }, { class: "form-control" }  %>
  </div>

  <div class="form-group">
    <%= f.label :title, "題名" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :body, "内容" %>
    <%= f.text_area :body, class: "form-control", rows: 10 %>
  </div>

  <%= f.submit '保存', class: "btn btn-primary" %>
<% end %>
